<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.roadscanner.dao.qna.QuestionDAO">

<!--    <select id="getAllQuestions" resultType="QuestionVO">-->
<!--        SELECT * FROM QUESTION-->
<!--    </select> 기존의 쿼리의 방식을 쓰려면 SQL 쿼리 이름을 변경하면 가능 SQL이랑 자바 ^^ -->

    <select id="getAllQuestions" resultType="QuestionVO">
        SELECT
            no,
            category,
            views,
            idx,
            id,
            title,
            content,
            create_date AS createDate,
            update_date AS updateDate
        FROM QUESTION
    </select>

<!--    <insert id="createQuestion" parameterType="QuestionVO">-->
<!--        INSERT INTO QUESTION-->
<!--            (category, id, idx, title, content)-->
<!--        VALUES-->
<!--            (#{category}, #{id}, #{idx}, #{title}, #{content})-->
<!--    </insert>-->

    <insert id="save" useGeneratedKeys="true" keyProperty="no">
        INSERT INTO QUESTION (category, id, title, content)
        VALUES (#{category}, #{id}, #{title}, #{content})
    </insert>

</mapper>