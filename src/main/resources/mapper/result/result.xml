<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.roadscanner.dao.result">
  
  <!-- 결과 이미지 상세 조회 -->
  <select id="doSelectOne" parameterType="ResultVO" resultType="ResultVO">
    SELECT
		    no,
		    name,
		    content,
		    url
		FROM
		    result_image
		WHERE
		    no = #{no}
  </select>
  
  <!-- 결과 이미지 수정 -->
  <update id="doUpdate" parameterType="ResultVO">
    UPDATE result_image
		SET
		    name    = #{name},
		    content = #{content},
		    url     = #{url}
		WHERE
		    no = #{no}
  </update>
  
  <!-- 결과 이미지 삭제 -->
  <delete id="doDelete" parameterType="ResultVO">
    DELETE FROM result_image
    WHERE no = #{no}
  </delete>
  
  <!-- 결과 이미지 등록 -->
  <insert id="doSave" parameterType="ResultVO">
    INSERT INTO result_image (
        no,
        name,
        content,
        url
    ) VALUES (
        #{no},
        #{name},
        #{content},
        #{url}
    )
  </insert>
    
</mapper>