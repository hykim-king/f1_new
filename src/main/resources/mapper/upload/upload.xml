<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.roadscanner.upload">
  
  
  
  <delete id="doDelete" parameterType="com.roadscanner.domain.FileUploadVO">
  DELETE FROM upload_image
	WHERE u_idx = #{uIdx}
  </delete>

  <insert id="doSave" parameterType="com.roadscanner.domain.FileUploadVO">
    INSERT INTO upload_image (
		    u_idx,
		    u_id,
		    u_div,
		    u_date,
		    u_name,
		    u_url,
		    u_size
		) VALUES (
		    #{uIdx},
		    #{uId},
		    10,
		    SYSDATE,
		    #{uName},
		    #{uUrl},
		    #{uSize}
		)
  </insert>

</mapper>