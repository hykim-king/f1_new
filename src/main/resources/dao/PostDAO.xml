<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.roadscanner.dao.PostDAO">
    <select id="getAllPosts" resultType="com.roadscanner.dto.Posts">
        SELECT * FROM POST
    </select>

    <select id="getPostById" parameterType="Long" resultType="com.roadscanner.dto.Posts">
        SELECT * FROM POST WHERE id=#{id}
    </select>

    <insert id="createPost" parameterType="com.roadscanner.dto.Posts">
        INSERT INTO post (category, title, content, author, created_date, updated_date)
        VALUES (#{category}, #{title}, #{content}, #{author}, #{createdDate}, #{updatedDate})
    </insert>

</mapper>
